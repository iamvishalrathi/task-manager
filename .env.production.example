# Production Environment Configuration
# Copy this file to .env.production and update the values

# Application Configuration
VITE_APP_NAME="Task Manager Pro"
VITE_APP_VERSION="2.0.0"
VITE_APP_DESCRIPTION="Production-ready task management application"

# API Configuration
VITE_API_URL="https://your-api-domain.com/api"
VITE_API_TIMEOUT=10000

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_DARK_MODE=true

# External Services
VITE_GOOGLE_ANALYTICS_ID=""
VITE_SENTRY_DSN=""
VITE_HOTJAR_ID=""

# Performance Configuration
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_PWA=true

# Security Configuration
VITE_ENABLE_CSP=true
VITE_ALLOWED_ORIGINS="https://your-domain.com,https://www.your-domain.com"

# Social Media & SEO
VITE_SITE_URL="https://your-domain.com"
VITE_SOCIAL_IMAGE="https://your-domain.com/og-image.png"
VITE_TWITTER_HANDLE="@yourtwitterhandle"

# Contact Information
VITE_SUPPORT_EMAIL="support@your-domain.com"
VITE_COMPANY_NAME="Your Company Name"
